%Color palettes, you should not use a sidebar
\setbeamercolor*{palette primary}{fg=unigreen}
\setbeamercolor*{palette secondary}{fg=unidarkgrey}
\setbeamercolor*{palette tertiary}{fg=unigrey}
\setbeamercolor*{palette quaternary}{fg=unilightgrey}

%Text colors
\setbeamercolor{normal text}{fg=unidarkgrey}
\setbeamercolor{titlelike}{fg=unidarkgrey} %TODO: Fonts
\setbeamercolor{section in toc}{fg=unidarkgrey,bg=white}
\setbeamercolor{alerted text}{fg=unigreen}
\setbeamercolor{normal text}{fg=unidarkgrey}

%Structure elements
\setbeamercolor{separation line}{fg=unigreen, bg=unigreen}
\setbeamercolor*{item}{fg=unigreen}

%Footer
\setbeamercolor{author in head/foot}{fg=unigrey}
\setbeamercolor{date in head/foot}{fg=unigrey}
\setbeamercolor{page number in head/foot}{fg=unigrey}
\setbeamercolor{title in head/foot}{fg=unigrey}

% Title page colors
\setbeamercolor{title}{fg=unidarkgrey}
\setbeamercolor{author}{fg=unigreen}
\setbeamercolor{institute}{fg=unidarkgrey}
\setbeamercolor{date}{fg=unidarkgrey}
\setbeamercolor{subtitle}{fg=unidarkgrey}
\setbeamercolor{block title}{fg=unidarkgrey}

%\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor{titlelike}{fg=unidarkgrey}
\setbeamercolor{frametitle}{parent=titlelike}
